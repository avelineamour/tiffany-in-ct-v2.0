<%= form_for @user, controller: 'users', action: 'create' do |f| %>
<h1>Create your own user profile:</h1>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h3>Please correct the following errors:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="field<%= ' field_with_errors' if @user.errors[:name].any? %>">
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  </div>

  <div class="field<%= ' field_with_errors' if @user.errors[:email].any? %>">
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  </div>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <h2>Do you manage, own, or work for a site that you would like to add?</h2><br>
  <%= f.label :site_admin %>
  <%= f.check_box :site_admin %><br>

  <%= f.submit "Create User" %><br>
<% end %>

<%= link_to('Or, Log in with Facebook!', '/auth/facebook') %>
