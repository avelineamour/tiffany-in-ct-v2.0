<div class='site_container'>
  <div class='form'>
    <%= form_for [@site, @window], html: { multipart: true } do |f| %>

    <p><%= f.label :name %>
    <%= f.text_field :name %></p>

    <p><%= f.label :year_created %>
    <%= f.text_field :year_created %></p>

    <p><%= f.label :dedication %>
    <%= f.text_area :dedication %></p>

    <p><%= f.label :window_info %>
    <%= f.text_area :window_info %></p>

    <p><%= f.label :image %>
    <%= f.file_field :image %></p>

    <%= f.hidden_field :site_id, :value => @site.id %>
    <p><%= f.submit "Submit this window", class:"submit" %></p>
  <% end %>
  </div>
</div>
